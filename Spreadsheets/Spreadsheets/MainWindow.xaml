<Window x:Class="Spreadsheets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spreadsheets"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Margin="0,25,0,0" ColumnWidth="75" HorizontalAlignment="Left" VerticalAlignment="Top" ItemsSource="{Binding Source=data}" Name="dg" SelectionUnit="Cell" SelectionMode="Extended"/>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="25" Name="Save" Content="Save" FontSize="10" Click="Save_Click"/>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="25" Name="Open" Content="Open" FontSize="10" Click="Open_Click" Margin="30,0,0,0"/>

    </Grid>
</Window>
